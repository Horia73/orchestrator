{
  "name": "orchestrator",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "kill-ports": "sh -c 'for p in 8787 5173; do pids=$(lsof -ti tcp:$p); if [ -n \"$pids\" ]; then echo \"[kill-ports] Releasing port $p (pid: $pids)\"; kill $pids 2>/dev/null || true; sleep 0.2; kill -9 $pids 2>/dev/null || true; fi; done'",
    "setup": "node server/cli/setup.js",
    "status": "node server/cli/status.js",
    "restart": "npm run kill-ports && npm run dev",
    "dev": "npm run kill-ports && concurrently -k \"npm:dev:api\" \"npm:dev:web\"",
    "dev:web": "vite",
    "dev:api": "node server/index.js",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "start:api": "node server/index.js",
    "postinstall": "chmod +x node_modules/node-pty/prebuilds/darwin-arm64/spawn-helper 2>/dev/null || true"
  },
  "dependencies": {
    "@google/genai": "^1.42.0",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/xterm": "^6.0.0",
    "concurrently": "^9.2.1",
    "cron-parser": "^5.5.0",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "highlight.js": "^11.11.1",
    "katex": "^0.16.33",
    "mermaid": "^11.12.3",
    "node-pty": "^1.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.1.0",
    "rehype-katex": "^7.0.1",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "vite": "^7.3.1"
  }
}
